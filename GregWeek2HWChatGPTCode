//ChatGPT Code
function setup() {
  createCanvas(400, 400);
  noLoop(); // We don't need continuous drawing
}

function draw() {
  background(255); // White background

  // Draw the pizza base
  fill(245, 222, 179); // Crust color
  ellipse(width / 2, height / 2, 300, 300); // Base circle

  // Draw the tomato sauce
  fill(255, 69, 0); // Tomato red
  ellipse(width / 2, height / 2, 260, 260); // Inner circle

  // Add cheese
  fill(255, 255, 102); // Cheese yellow
  ellipse(width / 2, height / 2, 240, 240);

  // Add toppings - pepperoni slices
  fill(139, 0, 0); // Pepperoni color
  for (let i = 0; i < 8; i++) {
    let angle = TWO_PI / 8 * i;
    let x = width / 2 + cos(angle) * 100;
    let y = height / 2 + sin(angle) * 100;
    ellipse(x, y, 40, 40);
  }

  // Add some green garnish
  fill(34, 139, 34); // Green color
  for (let i = 0; i < 8; i++) {
    let angle = TWO_PI / 8 * i + PI / 16;
    let x = width / 2 + cos(angle) * 120;
    let y = height / 2 + sin(angle) * 120;
    ellipse(x, y, 15, 15);
  }

  // Optional: Add a plate
  noFill();
  stroke(200);
  strokeWeight(4);
  ellipse(width / 2, height / 2, 320, 320);
}
